<script>
    var id_producto;
    var nombre_producto;
    var descripcion_producto;
    var precio_producto;
    var ruta_foto;


    $(document).ready(function () {
       listaPedidos();
    });

    function listaPedidos() {

        $.ajax({
            type: "GET",
            url: '/Pedidos/GetPedidos/',
            contentType: "application/json",
            success: function (data) {

                var rows = '';       

                $.each(data, function (i, item) {
                 
                    rows += "<tr>"
                    rows += "<td style='display:none;'>" + item.id_cliente + "</td>"                
                    rows += "<td>" + item.nombre_cliente + "</td>"
                    rows += "<td>" + item.fecha + "</td>"
                    rows += "<td>" + item.estado + "</td>"           
                    rows += "<td>" + item.latitud + item.longitud + "</td>"  
                    rows += "<td> <button type='button' id='btnVer' class='btn btn-primary'  onClick='addRowHandlers()'>Detalle</button> <button type='button' id='btnDelete' class='btn btn-danger' onClick='addRowHandlers()' >Enviar</button></td>"
                    rows += "</tr>";
                    $("#tabla tbody").html(rows);
                   
                });
            }

        })
    }

    function addRowHandlers() {
        var table = document.getElementById("tabla");
        var rows = table.getElementsByTagName("tr");
        for (i = 0; i < rows.length; i++) {
            var currentRow = table.rows[i];
            var createClickHandler =
                function (row) {
                    return function () {
                        var cel0 = row.getElementsByTagName("td")[0];                   
                        var id_cliente = cel0.innerHTML;

                        Detalle(id_cliente)


                    };
                };

            currentRow.onclick = createClickHandler(currentRow);
        }
    }
    window.onload = addRowHandlers();


    function Detalle(id_cliente) {
        $("#ModalDetalle").modal("show");
        $.ajax({
            type: "GET",
            url: '/Pedidos/GetDetallePedidos/?id_cliente=' + id_cliente,
            contentType: "application/json",
            success: function (data) {

                var rows = '';

                $.each(data, function (i, item) {

                    rows += "<tr>"
                    rows += "<td>" + item.nombre_producto + "</td>"
                    rows += "<td>" + item.cantidad + "</td>"
                    rows += "<td>" + item.total + "</td>"
                   rows += "</tr>";
                    $("#tablaDetalle tbody").html(rows);

                });
            }

        })

    }

    $("#btnSave").click(function () {

        if (window.FormData == undefined)
            alert("Error: FormData is undefined");

        else {
            // para los productos
            var fileUpload = $("#fileToUpload").get(0);
            var nombre_producto = $("#nombre_producto").val();
            var descripcion_producto = $("#descripcion_producto").val();
            var precio_producto = $("#precio_producto").val();
            var stock_producto = $("#stock_producto").val();

            var files = fileUpload.files;
            var fileData = new FormData();

            fileData.append(files[0].name, files[0]);
            fileData.append("nombre_producto", nombre_producto);
            fileData.append("descripcion_producto", descripcion_producto);
            fileData.append("precio_producto", precio_producto);
            fileData.append("stock_producto", stock_producto);


            $.ajax({
                url: '/Productos/CreateProducto',
                type: 'post',
                datatype: 'json',
                contentType: false,
                processData: false,
                async: false,
                data: fileData,
                success: function (response) {
                    listaProductos();
                    $("#AgregarProdudctto").modal('hide');

                    $("#ModalCheck").modal("show");
                 //   listaProductos();

                },
                error: function (xhr, status) {
                    alert('Disculpe, existió un problema');
                },
            });
        }

    });

 

</script>