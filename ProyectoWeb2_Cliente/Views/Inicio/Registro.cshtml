        padding: 1.5%;
        color: #fff;
        background-color: #0062cc;
        border: none;
        cursor: pointer;
        margin-right: 6%;
        background-color: white;
        color: blue;
        margin-top: 4%;
    }

    .register .nav-tabs .nav-link:hover {
        border: none;
    }

    .text-align {
        margin-top: -3%;
