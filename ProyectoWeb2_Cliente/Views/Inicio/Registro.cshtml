<script src="~/Scripts/js/lottie-player.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<script>

    $("#btnRegistrar2").click(function () {
      
        var data = {

            nombre_usuario: $("#inputNombre2").val(),
            direccion_usuario: $("#inputDireccion").val(),
            telefono_usuario: $("#inputTelefono2").val(),
            correo_usuario: $("#inputCorreo2").val(),
            clave_usuario: $("#inputClave2").val(),
            url_imagen: "default_imagen",
            tipo_usuario: "Empresa"
        }

        $.ajax({
            url: '/Inicio/RegistrarEmpresa/',
            type: 'POST',
            dataType: 'json',
            data: data,
            success: function (data) {
                
             //   clear();
           
                $("#ModalVerificar").modal("show");
            },
            error: function (err) {
                alert("Error: " + err.responseText);
            }
        })

    });



    $("#btnRegistrar").click(function () {
        //RegistrarEmpresa
        $("#ModalVerificar").modal("show");



    });


</script>