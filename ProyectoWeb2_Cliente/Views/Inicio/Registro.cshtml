    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Verifique su Correo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <lottie-player src="https://assets4.lottiefiles.com/packages/lf20_Ly3LBu.json" background="transparent" speed="1" style="width: 250px; height: 250px;margin-left:20% "  autoplay></lottie-player>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
             
            </div>
        </div>
    </div>
</div>
