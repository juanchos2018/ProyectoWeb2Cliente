@model  IEnumerable<ProyectoWeb2_Cliente.Models.Publico>
@{
    ViewBag.Title = "Index";
}



<div class="product-area pt-60 pb-50">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="li-product-tab">
                    <ul class="nav li-product-menu">
                        <li><a class="active" data-toggle="tab" href="#li-new-product"><span>Abarrotes</span></a></li>
                        <li><a data-toggle="tab" href="#li-bestseller-product"><span>Mujeres</span></a></li>
                        <li><a data-toggle="tab" href="#li-featured-product"><span>Niños</span></a></li>
                    </ul>
                </div>
                <!-- Begin Li's Tab Menu Content Area -->
            </div>
        </div>

        <div class="tab-content">
            <div id="li-new-product" class="tab-pane active show" role="tabpanel">
                <div class="row">
                    <div class="product-active owl-carousel">

                        @foreach (var item in Model)
                        {

                            <form action="">
                                <div class="col-lg-12">
                                    <div class="single-product-wrap">
                                        <div class="product-image">

                                            <a>
                                                <img src="@item.ruta_foto" width="200" height="200" />
                                            </a>
                                            <span class="sticker">Nuevo</span>
                                        </div>
                                        <div class="product_desc">
                                            <div class="product_desc_info">
                                                <div class="product-review">
                                                    <h5 class="manufacturer">
                                                        <input type="text" id="copro" hidden="" name="copro" value="">
                                                        <a href="#">@item.nombre_producto</a>
                                                    </h5>
                                                    <div class="rating-box">
                                                        <ul class="rating">                                                         


                                                        </ul>
                                                    </div>
                                                </div>
                                                <h4><a class="product_name" href="#">@item.nombre_producto </a></h4>
                                                <div class="price-box">
                                                    <span class="new-price"> @item.precio_producto </span>
                                                </div>
                                            </div>
                                            <div class="add-actions">
                                                <ul class="add-actions-link">
                                                    <li class="add-cart active">

                                                        <a href="#" onclick="AgregaCarrito('@item.id_empresa','@item.id_producto','@item.nombre_producto')">Agregar</a>

                                                    </li>
                                                    <li><a class="links-details" href="#"><i class="fa fa-heart-o"></i></a></li>
                                                    <li><a href="#" title="quick view" class="quick-view-btn" data-toggle="modal" data-target="#exampleModalCenter"><i class="fa fa-eye"></i></a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- single-product-wrap end -->
                                </div>
                            </form>
                        }



                    </div>
                </div>
            </div>

        </div>
    </div>

  
    <script>

        function AgregaCarrito(id_empre,idpro,nombrepro) {
            alert(idpro + nombrepro);
            var nombreCli="Pepep";
            var id_producto;
            //Pediddo_Cliente
            var data = { id_empresa: id_empre, nombre_cliente: nombreCli }
            $.ajax({
                url: '/Inicio/Pediddo_Cliente/',
                type: 'post',
                datatype: 'json',
                data: data,
                success: function (response) {

                    //$("#AgregarProdudctto").modal('hide');
                  //  alert("Registrado")
                    AgregaDetalleCarrito(idpro, nombrepro, id_empre);

                },
                error: function (xhr, status) {
                    alert('Disculpe, existió un problema');
                },
            });

        }
        function AgregaDetalleCarrito(id_producto,nombre,ide) {
           
            var data = { id_producto: id_producto, nombre_producto: nombre, cantidad: 1, total: 100, id_empresa: ide }
            $.ajax({
                url: '/Inicio/Pediddo_Detalle/',
                type: 'post',
                datatype: 'json',
                data: data,
                success: function (response) {

                    //$("#AgregarProdudctto").modal('hide');
                    alert("Registrado Detallle");


                },
                error: function (xhr, status) {
                    alert('Disculpe, existió un problema');
                },
            });

        }
    </script>